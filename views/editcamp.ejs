<%- include('partials/header.ejs') %>

<div class="container">
  <h1 style="text-align:center;">edit : <strong><%=campground.name%></strong></h1>
<form action ="/campgrounds/<%=campground._id%>/edit?_method=PUT" method="post">
    <div style= "margin:0 auto; width: 350px;">
    <div class="form-group"> 
      <input class="form-control" type="text" value="<%=campground.name%>" name="body[name]" required>
    </div>
    <div class="form-group">
      <input class="form-control" type="text" value="<%=campground.image%>" name="body[image]" required>
    </div>
    <div class="form-group">
      <input class="form-control" type="text" value="<%=campground.description%>" name="body[description]" required>
    </div>
    <div class="form-group">
      <input class="form-control" type="text" value="<%=campground.price%>" name="body[price]" required>
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-block">add</button>
    </div>
    </div>
</form>
</div>
<%- include('partials/footer.ejs') %>